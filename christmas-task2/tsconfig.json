{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "es6",
    "moduleResolution": "node",
    "target": "ES6",
    "allowJs": true,
    //"strict": true,
    //"alwaysStrict": true, 
    "noImplicitAny": true, 
    "strictNullChecks": true, 
    "strictFunctionTypes": true, 
    "strictPropertyInitialization": true, 
    //"noImplicitThis": true, 
    //"strictBindCallApply": true
  },
  "include": [
    "src/**/*"//,
    //"tests/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "allowSyntheticDefaultImports": true,
  "forceConsistentCasingInFileNames": true
}